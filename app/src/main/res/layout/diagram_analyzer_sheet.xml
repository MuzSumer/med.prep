<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/d_worst"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="schlechteste"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBaseline_toBaselineOf="@+id/result_worst"
        app:layout_constraintEnd_toStartOf="@+id/result_worst"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result_worst"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/d_worst"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/d_best"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="beste"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBaseline_toBaselineOf="@+id/result_best"
        app:layout_constraintEnd_toStartOf="@+id/result_best"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result_best"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/d_best"
        app:layout_constraintTop_toBottomOf="@id/result_worst" />

    <TextView
        android:id="@+id/d_average"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Durchschnitt"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        app:layout_constraintBaseline_toBaselineOf="@+id/result_average"
        app:layout_constraintEnd_toStartOf="@+id/result_average"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result_average"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/d_average"
        app:layout_constraintTop_toBottomOf="@id/result_best" />

    <TextView
        android:id="@+id/d_result"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:text="Empfehlung"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        app:layout_constraintBaseline_toBaselineOf="@+id/result_output"
        app:layout_constraintEnd_toStartOf="@+id/result_output"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/result_output"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="192dp"
        android:text="result"
        android:textColor="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/d_result"
        app:layout_constraintTop_toBottomOf="@id/result_average" />


</androidx.constraintlayout.widget.ConstraintLayout>