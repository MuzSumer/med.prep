<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MedicalPreparedness" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- parent="@android:style/Theme.Dialog" -->
    <style name="Theme.SystemDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:background">@color/ic_color_night</item>
        <item name="android:colorForeground">@color/teal_700</item>
        <item name="android:textColorPrimary">@color/ic_color_day</item>
        <item name="android:colorPrimaryDark">@color/ic_color_night</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/ic_color_day</item>
        <item name="android:colorPrimary">@color/teal_700</item>
        <item name="android:colorSecondary">@color/teal_700</item>
        <item name="android:editTextColor">@color/ic_color_day</item>
    </style>
</resources>